<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PlayingMode.Stepmission.detailStep">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="current step"
        android:textSize="35dp"
        android:layout_gravity="center"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/bold"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.5"
        app:srcCompat="@drawable/clickstart"
        android:padding="50dp"
        app:layout_constraintBottom_toTopOf="@+id/layoutAnswer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:layout_margin="32dp"/>

    <LinearLayout
        android:id="@+id/layoutAnswer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#CDDC39"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </LinearLayout>


    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/Sone"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintWidth_percent="0.4"
        tools:ignore="MissingConstraints"
        app:layout_constraintCircle="@id/imageView"
        android:visibility="gone"
        app:srcCompat="@drawable/one"
        />

    <ImageView

        android:id="@+id/Stwo"
        app:srcCompat="@drawable/two"
        tools:ignore="MissingConstraints"
        app:layout_constraintCircle="@id/imageView"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintWidth_percent="0.4"/>

    <ImageView
        android:id="@+id/Stree"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintWidth_percent="0.4"
        app:srcCompat="@drawable/three"
        tools:ignore="MissingConstraints"
        app:layout_constraintCircle="@id/imageView"
        android:visibility="gone"/>


</androidx.constraintlayout.widget.ConstraintLayout>